/**list.wxss**/

.container1 {
  font-family: "微软雅黑";
  box-sizing: border-box;
  color: #666;
  font-size:16px;
}

.title {
  background: #44b3aa;
  width: 100%;
  height: 75rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
   font-size:18px;
}

.title>image {
  float: left;
  width: 30rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}

.category {
  background: #f8f8f8;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #44b3aa;
  text-align: center;
  font-size:18px;
}

.prise {
  float: left;
  width: 50%;
}

.active {
  border-bottom: 3rpx solid #44b3aa;
}
.list {
  box-sizing: border-box;
  border-bottom: 1rpx solid #cfcfcf;
  padding: 10rpx 30rpx;
  overflow: hidden;
  line-height: 80rpx;
  width: 100%;
}
.icon {
  width: 140rpx;
  height: 140rpx;
  margin-top: 10rpx;
  float: left;
}
.text{
   margin-left: 170rpx;
}
.name {
  color:#f15c5c;
}
.replayDate{
   float: right;
   font-size: 14px;
}
