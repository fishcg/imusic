/**list.wxss**/

.container1 {
  font-family: "微软雅黑";
  box-sizing: border-box;
  color: #666;
  font-size: 16px;
}

.title {
  background: #44b3aa;
  width: 100%;
  height: 75rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  font-size: 18px;
}

.title>image {
  float: left;
  width: 30rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}

.category {
  background: #f8f8f8;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #44b3aa;
  text-align: center;
  font-size: 18px;
}

.prise {
  float: left;
  width: 50%;
}

.active {
  border-bottom: 3rpx solid #44b3aa;
}

.list {
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  overflow: hidden;
  line-height: 80rpx;
  width: 100%;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-top: 10rpx;
  float: left;
}

.text {
  margin-left: 90rpx;
  font-size: 18px;
}

.text2 {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  margin-left: 130rpx;
  border-bottom: 1rpx solid #cfcfcf;
}

.name2 {
  margin-left: 130rpx;
  color: #303030;
}

.replayContent {
  padding: 15rpx 30rpx;
}

.replayDate {
  float: right;
  font-size: 14px;
}

.replay {
  position: fixed;
  bottom: 0;
  background: #44b3aa;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

#replay {
  position: absolute;
  background-color: #fff;
  float: left;
  width: 75%;
  height: 64rpx;
  border-radius: 20rpx;
  margin-top: 18rpx;
  margin-left: 35rpx;
}

.submit {
  float: right;
  width: 55rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-right: 6%;
}
